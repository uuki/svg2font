{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "target": "es2017",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "lib",
    "lib": [
      "es6",
      "es2017"
    ],
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
